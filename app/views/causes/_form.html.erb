<%= form_for @cause, html: {class: "form"} do |f| %>
  <%= render 'layouts/errors', :object => @cause %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit "Create Cause", class: "btn btn-primary btn-block" %>
<% end %>
