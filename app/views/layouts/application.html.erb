<!DOCTYPE html>
<html>
<head>
  <title>Donatr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <header class="header">
    <nav>
        <ul class="nav nav-pills pull-right">
          <% if current_user %>
            <li>Logged in as <%= current_user.email %></li>
            <li><%= link_to "Log Out", logout_path %></li>
          <% else %>
            <li><%= link_to "Sign Up", signup_path %></li>
            <li><%= link_to "Log In", login_path %></li>
          <% end %>
        </ul>
      </nav>
      <h2 class="text-muted"><%= link_to "Donatr", root_path %></h2>
  </header>

  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible center" role="alert">
      <%= flash[:notice] %> <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span></button>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger alert-dismissible center" role="alert">
      <%= flash[:alert] %> <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span></button>
    </div>
  <% end %>

  <%= yield %>

  <%= params.inspect %>

  </div>
</body>
</html>
